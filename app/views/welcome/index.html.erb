
<h1>Viewing Party</h1>

<% if current_user %>

  <h1> LOGGED TF IN </h1>
  <h2>Existing Users</h2>
  <ul id="existing_users">
    <% @users.each do |user| %>
      <li><%= user.email %></li>
    <% end %>
  </ul>
  <%= button_to 'Logout', logout_path, method: :get, class: "btn btn-lg btn-outline-secondary" %><br>

<% else %>

  <%= button_to 'Create New User', register_user_path, method: :get, class: "btn btn-lg btn-outline-secondary" %><br>
  <%= button_to 'Login Existing User', "/login", method: :get, class: "btn btn-lg btn-outline-secondary" %><br>

<% end %>